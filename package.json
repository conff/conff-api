{
  "name": "conff-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:conff/conff-api.git",
  "author": "Salim KAYABASI <salim.kayabasi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "pretest": "yarn lint",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "**/(__tests__|tests|test)/**/*.js?(x)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^19.0.2"
  }
}
